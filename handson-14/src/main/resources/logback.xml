<configuration>
  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d %-5level %logger{10} %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="operator" level="error">
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="progress" additivity="false" level="DEBUG">
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="SQL" additivity="false" level="DEBUG">
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="etl" additivity="false" level="DEBUG">
    <appender-ref ref="STDOUT" />
  </logger>

  <logger name="nablarch" additivity="false" level="DEBUG">
    <appender-ref ref="STDOUT" />
  </logger>

  <root level="INFO">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>